# === Deployment vars ===
DOCKERHUB_USER={{ dockerhub_user }}
TAG={{ image_tag }}
JWT_SECRET={{ jwt_secret }}

# --- Puertos publicados en el host (se parametrizan por ambiente desde Ansible)
FRONTEND_PORT={{ frontend_port }}
USERS_API_PORT={{ users_api_port }}
TODOS_API_PORT={{ todos_api_port }}
AUTH_API_PORT={{ auth_api_port }}
NGINX_HTTP_PORT={{ nginx_http_port }}
REDIS_PORT={{ redis_port }}

# --- Servicios internos (red Docker)
USERS_API_URL=http://users-api:8083
REDIS_URL=redis://redis:6379
CACHE_TTL_SECONDS=60

# Multiples alias por compatibilidad
USERS_SERVICE_URL=http://users-api:8083
USERS_URL=http://users-api:8083
USER_SERVICE_URL=http://users-api:8083
USER_API_URL=http://users-api:8083
USERS_SERVICE_HOST=users-api:8083
USERS_SERVICE_ADDR=http://users-api:8083
USER_API_ADDR=http://users-api:8083
USERS_API_INTERNAL=http://users-api

SECURITY_BASIC_ENABLED=false
MANAGEMENT_SECURITY_ENABLED=false

# --- Frontend (usa Nginx por delante)
VITE_USERS_API_URL=http://localhost/api/users
VITE_TODOS_API_URL=http://localhost/api/todos
VITE_AUTH_API_URL=http://localhost/api/auth
